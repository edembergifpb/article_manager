<h1>Articles</h1>
<%if user_signed_in?%>
  <%= button_to "Add article", new_article_path, class: "btn btn-lg btn-primary", method: :get%>
<%end%>
<div id="articles">
  <%if @articles.any? %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Titulo</th>
          <th scope="col">Autor</th>
        </tr>
      </thead>
      <tbody>

        <% @articles.each do |article| %>
          <tr>
            <th scope="row"><%=article.id%></th>
            <td><%= link_to article.title, article %></td>
            <td><%=article.user.name%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <%end%>
</div>

<%= paginate @articles %>
